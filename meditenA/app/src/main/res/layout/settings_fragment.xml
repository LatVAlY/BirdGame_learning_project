<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">
    <RelativeLayout
        android:id="@+id/relative_settings"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/close_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_margin="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/update_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_margin="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_profile_image"
        android:layout_width="130dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/relative_settings"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"/>

    <EditText
        android:id="@+id/update_phone_number_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:inputType="phone"
        android:layout_below="@+id/setting_profile_image"
        android:hint="Change your Phone Number"
        />
    <EditText
        android:id="@+id/update_name_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_phone_number_settings"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:hint="Change your Name"
        />
    <EditText
        android:id="@+id/update_Adress_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_name_settings"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:hint="Adress..."
        />
    <EditText
        android:id="@+id/update_Email_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_Adress_settings"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:hint="Change your Email"
        />

    <Button
        android:id="@+id/logout_button_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@+id/update_Email_settings"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />
</RelativeLayout>