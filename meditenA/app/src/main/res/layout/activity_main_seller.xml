<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Admin.AdminAddCategoryActivity">

    <TextView
        android:id="@+id/txt_welcome_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:layout_marginTop="27dp"
        android:layout_marginStart="22dp"
        android:text="Welcome to a Seller Account"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/relative_cardView_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_welcome_seller"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <androidx.cardview.widget.CardView
            android:layout_width="162dp"
            android:layout_height="154dp"
            app:cardBackgroundColor="#7679D8">

            <ImageView
                android:id="@+id/dashboard_icon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/dashboard" />

            <TextView
                android:id="@+id/txt_dashboard_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="@string/dashbord"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="162dp"
            android:layout_height="154dp"
            android:layout_marginLeft="43dp"
            app:cardBackgroundColor="#7679D8">

            <ImageView
                android:id="@+id/products_icon"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/producticon" />

            <TextView
                android:id="@+id/txt_products_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="Products"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relative_cardView_seller1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_cardView_seller"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginRight="22dp">

        <androidx.cardview.widget.CardView
            android:layout_width="162dp"
            android:layout_height="154dp"
            app:cardBackgroundColor="#7679D8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/orders_icon"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/cartadmin" />


                <TextView
                    android:id="@+id/orders_number_notification_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/notification_orders"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>
            <TextView
                android:id="@+id/txt_orders_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginStart="20dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="Orders"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/logout_button_seller"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_cardView_seller1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/hover"
        android:text="Logout"
        android:textStyle="bold"
        android:textColor="@android:color/white" />
</RelativeLayout>