<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context=".Buyer.JoinActivity">

    <ImageView
        android:id="@+id/logo_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/component_13__1"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        />
    <EditText
        android:id="@+id/name_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        android:textColor="@android:color/white"
        android:hint="Name"
        android:textSize="20dp"
        android:layout_below="@+id/logo_join"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/email_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        android:hint="Email"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_below="@+id/name_input"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_3"
        android:textColor="@android:color/white"
        android:hint="Password"
        android:textSize="20dp"
        android:layout_below="@+id/email_input"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/re_password_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_3"
        android:hint="Re-Password"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/hover1"
        android:layout_below="@+id/re_password_input"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Creat Account"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logo_join"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/logo_join"

        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.26" />
    <TextView
        android:id="@+id/login_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_account_button"
        android:textColor="@android:color/white"
        android:text="You already have an account? Login"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="19sp"/>
    <TextView
        android:id="@+id/seller_redirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Create a Seller Account"
        android:textColor="@color/registerSellerBtn"
        android:textSize="19sp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:gravity="end"
        />

</RelativeLayout>